<h1>Make a new post</h1>


<%= form_for :post, url: posts_path do |f| %>
	
	<% if @post.errors.any? %>
		<div class="error_expl">
			<h3>
				<%= pluralize(@post.errors.count, "error") %>
			</h3>

		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
		</div>
	<% end %>


	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>