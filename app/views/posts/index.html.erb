
<h1>Hello, this is my blog!</h1>

<% @posts.each do |post| %>
	<h2> <%= post.title %> </h2>
	<p> <%= post.text %> </p>
	<%= link_to 'Show', post_path(post) %> | 
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post_path(post),
    			method: :delete,
    			data: { confirm: "sure?" } %>
<% end %>